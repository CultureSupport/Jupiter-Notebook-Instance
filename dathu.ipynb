import subprocess
import os
import sys
import platform
import time

def run_notebook(notebook_path, output_path=None):
    """
    Executes a Jupyter Notebook from the terminal using nbconvert.
    """
    print(f"\n[!] Executing Notebook: {notebook_path}")
    
    # Command: jupyter nbconvert --to notebook --execute <file>
    # --inplace updates the existing file with results
    cmd = [
        "jupyter", "nbconvert", 
        "--to", "notebook", 
        "--execute", 
        notebook_path
    ]
    
    if output_path:
        cmd.extend(["--output", output_path])
    else:
        cmd.append("--inplace")

    try:
        result = subprocess.run(cmd, capture_output=True, text=True, check=True)
        print(f"[+] Successfully executed {notebook_path}")
        return True
    except subprocess.CalledProcessError as e:
        print(f"[-] Error executing notebook: {e.stderr}")
        return False
    except FileNotFoundError:
        print("[-] Error: 'jupyter' command not found. Ensure Jupyter is installed and in your PATH.")
        return False

def run_network_command(command_str):
    """
    Runs a terminal/shell command and returns the output.
    """
    print(f"\n[>] Running Terminal Command: {command_str}")
    
    # Use shell=True to handle piped commands or built-in shell features
    try:
        process = subprocess.Popen(
            command_str,
            shell=True,
            stdout=subprocess.PIPE,
            stderr=subprocess.PIPE,
            text=True
        )
        stdout, stderr = process.communicate()
        
        if stdout:
            print(stdout.strip())
        if stderr:
            print(f"Error: {stderr.strip()}")
            
        return process.returncode == 0
    except Exception as e:
        print(f"[-] Execution failed: {e}")
        return False

def main():
    # Example Batch Configuration
    # You can modify these lists to include your specific files and commands
    notebooks_to_run = [
        "analysis_report.ipynb",
        "data_processing.ipynb"
    ]
    
    # Cross-platform network commands (adjust for Windows/Linux as needed)
    is_windows = platform.system().lower() == "windows"
    ping_cmd = "ping -n 1 google.com" if is_windows else "ping -c 1 google.com"
    
    network_tasks = [
        ping_cmd,
        "netstat -an | findstr :80" if is_windows else "netstat -an | grep :80",
        "ipconfig /all" if is_windows else "ifconfig -a"
    ]

    print("=== Starting Batch Operations ===")
    
    # 1. Run Network Diagnostics
    print("\n--- Phase 1: Network Diagnostics ---")
    for cmd in network_tasks:
        run_network_command(cmd)
        time.sleep(1) # Small delay between network hits

    # 2. Run Notebooks
    print("\n--- Phase 2: Notebook Execution ---")
    for nb in notebooks_to_run:
        if os.path.exists(nb):
            run_notebook(nb)
        else:
            print(f"[?] Skipping {nb}: File not found.")

    print("\n=== Batch Operations Completed ===")

if __name__ == "__main__":
    main()
